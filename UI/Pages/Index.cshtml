@page
@using Models.MealPlans
@using Models.Room
@model IndexModel
@{
    ViewData["Title"] = "Divers Hotel";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Centered Form</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="text-center">
        <h1 class="display-4 fw-bold">Hotel Reservation</h1>
    </div>
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <form method="post" class="bg-light p-4 rounded" style="width: 100%; max-width: 800px;">
            <div class="form-group">
                <label asp-for="guestReservationDTO.GuestName" class="fw-bold">Name:</label>
                <input asp-for="guestReservationDTO.GuestName" class="form-control" required/>
                <span asp-validation-for="guestReservationDTO.GuestName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.GuestEmail" class="fw-bold">Email:</label>
                <input asp-for="guestReservationDTO.GuestEmail" class="form-control" required/>
                <span asp-validation-for="guestReservationDTO.GuestEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.GuestCountry" class="fw-bold">Country:</label>
                <input asp-for="guestReservationDTO.GuestCountry" class="form-control" required/>
                <span asp-validation-for="guestReservationDTO.GuestCountry" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.RoomTypeId" class="fw-bold">Select Room Type</label>
                <select asp-for="guestReservationDTO.RoomTypeId" class="form-control" required>
                    @foreach (RoomType item in Model.RoomTypeList)
                    {
                        <option value="@item.ID">@item.Type</option>
                    }
                </select>
                <span asp-validation-for="guestReservationDTO.RoomTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.MealPlanId" class="fw-bold">Select Meal Plan</label>
                <select asp-for="guestReservationDTO.MealPlanId" class="form-control" required>
                    @foreach (MealPlan item in Model.MealPlanList)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="guestReservationDTO.MealPlanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.CheckIn" class="fw-bold"></label>
                <input asp-for="guestReservationDTO.CheckIn" class="form-control" type="datetime-local" required />
                <span asp-validation-for="guestReservationDTO.CheckIn" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.CheckOut" class="fw-bold"></label>
                <input asp-for="guestReservationDTO.CheckOut" type="datetime-local" class="form-control" required />
                <span asp-validation-for="guestReservationDTO.CheckOut" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.NumberOfAdults" class="fw-bold">Number Of Adults</label>
                <input asp-for="guestReservationDTO.NumberOfAdults" class="form-control" type="number" required/>
                <span asp-validation-for="guestReservationDTO.NumberOfAdults" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="guestReservationDTO.NumberOfChildren" class="fw-bold">Number Of Children</label>
                <input asp-for="guestReservationDTO.NumberOfChildren" class="form-control" type="number" required/>
                <span asp-validation-for="guestReservationDTO.NumberOfChildren" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>